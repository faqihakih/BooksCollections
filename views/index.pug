doctype html
html
    head
        title= title 
        link(href='https://cdn.jsdelivr.net/npm/tailwindcss/dist/tailwind.min.css', rel='stylesheet')
    body
        <section class="text-gray-400 body-font bg-gray-900">
            <div class="container px-5 py-24 mx-auto">
                <div class="flex flex-wrap w-full mb-20 flex-col items-center text-center">
                    <h1 class="sm:text-3xl text-2xl font-medium title-font mb-2 text-white">Book Collection</h1>
                    <p class="lg:w-1/2 w-full leading-relaxed text-opacity-80">Whatever cardigan tote bag tumblr hexagon brooklyn asymmetrical gentrify, subway tile poke farm-to-table.</p>
                </div>
                <a class="flex mx-auto mt-16 text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg mb-4" href="/add">Button</a>
                <div class="flex flex-wrap -m-4">
                    each val, key in {...results}
                        <div class="xl:w-1/3 md:w-1/2 p-4">
                            <div class="border border-gray-700 border-opacity-75 p-6 rounded-lg">
                            img(src= val.cover)
                            h2(class="text-lg text-white font-medium title-font mb-2")= val.judul
                            p(class="leading-relaxed text-base")= val.penerbit
                            p(class="leading-relaxed text-base")= val.penulis
                            p(class="leading-relaxed text-base")= val.kategori
                            p(class="leading-relaxed text-base")= val.tahun
                            </div>
                        </div>
                </div>
            </div>
            </section>